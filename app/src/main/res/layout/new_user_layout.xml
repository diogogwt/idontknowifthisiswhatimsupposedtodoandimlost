<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_product_image"
        android:layout_width="80dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/user_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/user_product_amount"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:inputType="numberDecimal"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/user_product_plus_btn"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/up_arrow" />

        <ImageButton
            android:id="@+id/user_product_minus_btn"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/down_arrow" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/user_product_checkbox"
        android:layout_width="25dp"
        android:layout_marginEnd="10dp"
        android:layout_height="match_parent" />
</LinearLayout>